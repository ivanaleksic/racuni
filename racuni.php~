<?php
session_start();
$_SESSION['inactive'] = 600; // Timeout in seconds
if (isset($_SESSION['time'])) {
    $_SESSION['session'] = time() - $_SESSION['time'];                                              
    if ($_SESSION['session'] > $_SESSION['inactive']) {
        session_destroy();
        header("location:login.php");
    }
}
$_SESSION['time'] = time();
